.H_ib_tail {
  display: none;
}

.H_ib_body {
  background-color: #fff;
  padding: 24px 32px 24px 24px;
  border-radius: 4px;
  bottom: 60px;
  right: 0;
  min-width: 280px;
  box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
  transform: translateX(calc(50% - 22px));
}

.H_ib_content {
  min-width: auto;
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",
    "Noto Color Emoji";
  font-size: 16px;
  line-height: 22px;
  color: #3b4256;

  strong {
    text-transform: uppercase;
    font-size: 12px;
  }

  div {
    margin-bottom: 8px;

    &:last-of-type {
      margin-bottom: 0;
    }
  }

  .bubble-content-actions {
    padding-top: 8px;

    .btn {
      padding: 11px 16px;
      font-size: 16px;
      font-weight: 500;
    }
  }
}

.H_ib_close {
  font-size: 16px;
  line-height: 1;
  right: 24px;
  top: 24px;
  cursor: pointer;

  &::before {
    content: "";
    display: inline-block;
    width: 16px;
    height: 16px;
    background: url("data:image/svg+xml;base64,")
      no-repeat center;
  }

  svg {
    display: none;
  }
}
